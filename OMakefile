# ------------------------------------------------------------
# rules
# ------------------------------------------------------------

public.Proof(files) =
	vo=$(addsuffix .vo,$(files))
	value $(vo)

%.vo %.glob: %.v
	coqc $<

.SCANNER: %.vo: %.v
	coqdep -w -coqlib /opt/local/lib/coq/ -I . $<

# ------------------------------------------------------------
FILES[] =
	Term
	Eval
	Typing
	TypeInv
	TypeUniq
	CannonicalForm
	Progress
#	Subst

.DEFAULT: $(Proof $(FILES))

.PHONY: clean
clean:
	rm -f *.vo *.glob *~ *.omc .omakedb .omakedb.lock